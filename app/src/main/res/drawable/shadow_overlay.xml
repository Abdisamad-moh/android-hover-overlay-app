<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Drop shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#99000000"/> <!-- Semi-transparent black -->
            <corners android:radius="4dp"/> <!-- Rounded corners -->
        </shape>
    </item>
    <!-- Background overlay -->
    <item android:top="1dp" android:right="1dp" android:bottom="1dp" android:left="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#B3000000"/> <!-- Darker overlay -->
            <corners android:radius="3dp"/>
        </shape>
    </item>
</layer-list>
